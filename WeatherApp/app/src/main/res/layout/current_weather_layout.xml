<?xml version="1.0" encoding="utf-8"?>
<com.example.weatherapp.components.currentweatherlayout.CurrentWeatherLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#9D8EB8">


    <TextView
        android:id="@+id/curr_weather_layout_cityName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/guideline9"
        tools:text="Rome" />

    <TextView
        android:id="@+id/current_weather_layout_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/curr_weather_layout_cityName"
        app:layout_constraintTop_toBottomOf="@+id/curr_weather_layout_cityName"
        tools:text="Monday 17  gen 18  9:32pm" />

    <TextView
        android:id="@+id/curr_weather_layout_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:textSize="70sp"
        app:layout_constraintStart_toStartOf="@+id/curr_weather_layout_cityName"
        app:layout_constraintTop_toBottomOf="@+id/current_weather_layout_date"
        tools:text="7°C" />

    <TextView
        android:id="@+id/current_weather_layout_feels_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/curr_weather_layout_cityName"
        app:layout_constraintTop_toBottomOf="@+id/curr_weather_layout_temperature"
        tools:text="Percieved 15°C" />

    <ImageView
        android:id="@+id/current_weather_layout_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/current_weather_layout_feels_like"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        tools:srcCompat="@drawable/ic_moon" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

</com.example.weatherapp.components.currentweatherlayout.CurrentWeatherLayout>